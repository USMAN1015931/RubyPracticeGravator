<%= render 'shared/pages_title', title: @recipe.name %>

<div class="card col-md-8 offset-md-2 mt-4">
  <div class="card-body">
    <h4 class="text-center description"><strong>Steps:</strong></h4>
    
    <%= simple_format(@recipe.description) %>
    
    <div class="d-flex justify-content-between">
      <div>
        <p class="text-center">
          <em>Created by:</em>
        </p>
        <p class="text-center">
          <%= link_to gravatar_for(@recipe.chef), recipes_path %>
        </p>
        <p class="text-center">
          <small><%= @recipe.chef.chefname.capitalize %></small>
        </p>
      </div>
      <div>
        <small><%= time_ago_in_words(@recipe.created_at) %> ago</small>
      </div>
    </div>
    <div class="recipe-actions">
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: 'btn btn-sm btn-warning' %>
  <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-sm btn-danger" %>
  <%= link_to "Return to recipes list", recipes_path, class: "btn btn-sm btn-warning" %> 
</div>
  </div>

  </div>
</div>
