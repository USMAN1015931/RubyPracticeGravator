<%= render 'shared/pages_title', title: "Create a New Recipe" %>

<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
          <%= pluralize(@recipe.errors.count, "error") %>
          prohibited this <%= @recipe.class %> from being saved:
        </h4>
        <hr>
        <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>


<div class="row">
  <div class="col-md-12">
      <%= form_for(@recipe, :html => {class: "form-horizontal",  role: "form"}) do |f| %>
      <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :name %></label>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :description %></label>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-md-8 offset-md-2">
          <%= f.submit 'Create Recipe', class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-md-4 text-center">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>
