<% obj.each do |recipe| %>
<div class="row mb-3 well">
  <div class="col-md-2">
    <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
    </section>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><a><%= link_to recipe.name, recipe_path(recipe) %></a></h4>
        <p class="card-text"><%= truncate(recipe.description, length: 150) %></p>
        <p>
          <span class="text-muted"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
