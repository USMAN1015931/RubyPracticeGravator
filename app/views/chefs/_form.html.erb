<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-12">
      <%= form_for(@chef, :html => {class: "form-horizontal",  role: "form"}) do |f| %>
      <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :chefname, "Name" %></label>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :email %></label>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
       <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :password %></label>
        <div class="col-md-8">
          <%= f.text_field :password, class: "form-control", placeholder: "Choose your password", autofocus: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <label class="col-md-2 col-form-label"><%= f.label :password_confirmation, "Confirm Password"%></label>
        <div class="col-md-8">
          <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
        </div>
      </div>

      <div class="mb-3 row">
        <div class="col-md-8 offset-md-2">
          <%= f.submit(@chef.new_record? ? "Create my Account" : "update my Account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 offset-md-4 text-center">
      [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
    </div>
  </div>
</div>
